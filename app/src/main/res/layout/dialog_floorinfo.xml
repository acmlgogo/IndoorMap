<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:layout_height="550dp"
    android:background="@drawable/dialog_shape"
    app:cardBackgroundColor="@color/whiteColor"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:background="@drawable/dialog_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/dialog_floor_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/floorinfo_im_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/louyu_nav_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼层信息展示"
                android:textColor="#767676"
                android:textSize="25sp" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_floor_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_floor_linearlayout"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>