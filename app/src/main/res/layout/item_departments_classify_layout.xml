<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:id="@+id/item_departments_classify_layout"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/departments_classify_selector">

        <TextView
            android:id="@+id/item_departments_classify_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_departments_classify_tv_loaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"

            android:layout_below="@+id/item_departments_classify_tv_name"
            android:layout_centerHorizontal="true"
            android:textSize="15sp" />

    </RelativeLayout>


</RelativeLayout>