<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/doctorcolor"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/doctor_nav_but"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/whiteColor"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textSize="8sp"
                    android:text="导航" />
                <ImageView
                    android:id="@+id/item_doctor_imageview"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@drawable/doctor" />

                <TextView
                    android:id="@+id/item_doctor_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/item_doctor_imageview"
                    android:text="名字" />

                <TextView
                    android:id="@+id/item_doctor_jobtitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignLeft="@+id/item_doctor_name_tv"
                    android:layout_below="@+id/item_doctor_name_tv"
                    android:text="职称" />

                <TextView
                    android:id="@+id/item_doctor_departments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignLeft="@id/item_doctor_jobtitle_tv"
                    android:layout_below="@+id/item_doctor_jobtitle_tv"
                    android:text="科室" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">
                <TextView
                    android:id="@+id/item_doctor_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_doctor_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"

                    android:layout_below="@+id/item_doctor_time_tv" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/item_doctor_begoodat_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="@string/begoodat"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_doctor_begoodat_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_doctor_begoodat_tv" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>