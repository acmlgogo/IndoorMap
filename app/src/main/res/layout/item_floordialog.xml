<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_relatvielayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/item_floordialog_selector">

        <TextView
            android:id="@+id/item_floorinfo_tv_floor_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="1F"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_floorinfo_tv_floor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:text="科室名称"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/item_floorinfo_imbutton_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_near_me_black_24dp" />
        <LinearLayout
            android:background="@color/rippleColor"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"></LinearLayout>
    </RelativeLayout>


</RelativeLayout>